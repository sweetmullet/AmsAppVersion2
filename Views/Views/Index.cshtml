@model IEnumerable<AmsApp.Models.Views>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            ViewsDescription
        </th>
        <th>
            ViewActiveInd
        </th>
        <th>
            IsBaseView
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ViewsDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ViewActiveInd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsBaseView)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ViewsId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ViewsId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ViewsId })
        </td>
    </tr>
}

</table>
